# Server Configuration
SERVER_PORT=3000
NODE_ENV=production

# Flag to determine if this server should serve frontend static files
# Set to 'true' to serve frontend, 'false' to serve API only
SERVE_FRONTEND=false

# Database Configuration
SQL_USER=your_user
SQL_PASSWORD=your_password
SQL_SERVER=your_server
SQL_DATABASE=QEIS1DAT
SQL_PORT=1433
SQL_ENCRYPT=true

# API Credentials (for external APIs)
API_KEY=your_api_key_here

# External API URLs
API1_URL=http://placeholder.api/api1/sensordata
API2_URL=http://placeholder.api/api2/sensordata

# IMPORTANT: Change this to your actual service interface IP address
# Using 0.0.0.0 binds to all interfaces which may be using admin IP as well
# Example: BIND_ADDRESS=192.168.1.10
BIND_ADDRESS=IP_DE_LA_INTERFAZ_DE_SERVICIO

# Debug settings
DEBUG_ENABLED=true
LOG_LEVEL=debug