# Server configuration
SERVER_PORT=3000
NODE_ENV=development
BIND_ADDRESS=0.0.0.0

# Flag to determine if this server should serve frontend static files
# Set to 'true' to serve frontend, 'false' to serve API only
SERVE_FRONTEND=false

# Database configuration
SQL_USER=sa
SQL_PASSWORD=your_password_here
SQL_SERVER=localhost
SQL_DATABASE=dcops
SQL_PORT=1433
SQL_ENCRYPT=true
SQL_TRUST_SERVER_CERTIFICATE=true
SQL_CONNECTION_TIMEOUT=15000
SQL_REQUEST_TIMEOUT=15000

# External API configuration
API1_URL=https://api.example.com/racks
API2_URL=https://api.example.com/sensors
API_KEY=your_api_key_here

# Debug settings
DEBUG_ENABLED=true
LOG_LEVEL=debug